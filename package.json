{
    "name": "webfont",
    "version": "4.0.2",
    "description": "Generator of webfonts from svg icons, svg icons to svg font, svg font to ttf, ttf to eot, ttf to woff, ttf to woff2",
    "license": "MIT",
    "author": "itgalaxy <development@itgalaxy.company>",
    "contributors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "alexander.krasnoyarov@itgalaxy.company",
            "url": "https://vk.com/sterling_archer"
        }
    ],
    "repository": {
        "type": "https",
        "url": "https://github.com/itgalaxy/webfont"
    },
    "keywords": [
        "cli",
        "standalone",
        "font",
        "fonts",
        "webfont",
        "webfonts",
        "svg",
        "ttf",
        "woff",
        "woff2",
        "otf",
        "ttf",
        "woff",
        "eot",
        "svg",
        "ttf2eot",
        "ttf2woff",
        "ttf2svg",
        "svg2ttf",
        "css"
    ],
    "bugs": {
        "url": "https://github.com/itgalaxy/webfont/issues"
    },
    "main": "dist/index.js",
    "bin": "dist/cli.js",
    "files": [
        "dist",
        "templates",
        "!**/__tests__"
    ],
    "dependencies": {
        "cosmiconfig": "^2.0.0",
        "globby": "^6.0.0",
        "meow": "^3.3.0",
        "mkdirp": "^0.5.1",
        "merge-deep": "^3.0.0",
        "nunjucks": "^2.5.0",
        "resolve-from": "2.0.0",
        "svg2ttf": "^4.0.0",
        "svgicons2svgfont": "^5.0.0",
        "ttf2eot": "^2.0.0",
        "ttf2woff": "^2.0.0",
        "ttf2woff2": "^2.0.0"
    },
    "devDependencies": {
        "ava": "^0.16.0",
        "ajv-cli": "^1.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.11.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "coveralls": "^2.11.6",
        "eslint": "^3.4.0",
        "eslint-plugin-ava": "^3.0.0",
        "eslint-plugin-import": "^2.0.0",
        "eslint-plugin-itgalaxy": "^23.0.0",
        "eslint-plugin-jsx-a11y": "^2.2.0",
        "eslint-plugin-lodash": "^2.1.0",
        "eslint-plugin-node": "^2.0.0",
        "eslint-plugin-promise": "^3.0.0",
        "eslint-plugin-react": "^6.2.0",
        "eslint-plugin-unicorn": "^1.0.0",
        "is-eot": "^1.0.0",
        "is-svg": "^2.0.0",
        "is-ttf": "^0.2.0",
        "is-woff": "^1.0.0",
        "is-woff2": "^1.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^3.0.0",
        "nyc": "^8.0.0",
        "package-schema": "^1.0.0",
        "remark-cli": "^2.0.0",
        "remark-lint": "^5.0.0",
        "remark-preset-lint-itgalaxy": "^2.0.0",
        "rimraf": "^2.5.2"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark '{**/*,*}.md' -i .gitignore -f -q",
        "lint": "npm-run-all -l --parallel lint:*",

        "pretest": "npm run lint",
        "ava": "nyc ava --verbose \"src/**/__tests__/*.js\"",
        "test": "npm run ava",

        "prebuild": "rimraf dist",
        "build": "babel src --out-dir dist --ignore /__tests__/",

        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    }
}
